<div class="row">

  <div class="col-sm-3">
  <%= image_tag @movie.imdb_artwork %>
  <p><%= link_to "IMDB", @movie.imdb_url %> | <%= link_to "Watch", @movie.watch_url %></p>
  </div><!--col-sm-3-->

  <div class="col-sm-9">
  <h2><%= @movie.title %> <span style="font-size: 40%;">(<%= @movie.watchlist.list %>)</span></h2>
  <div class="pull-right"><%= link_to 'Edit', edit_movie_path(@movie) %></div>
  <p class= "stats">IMDB: <%= @movie.imdb_rating %> of 100 <%= @movie.imdb_genre %>  |  <%= @movie.watchlist.list %>: <%= @movie.our_rating %> of 5 <%= @movie.category.name %></p>
    <div class="watch-info">
      <%= button_to "Watch", @movie.watch_url, class: "btn, btn-success" %>
      <p> Watched on <%= @movie.date_watched %> at <%= @movie.location_watched %> </p>
    </div><!--watch-info-->

  <p><strong>Plot Summary:</strong> <%= @movie.imdb_plot_summary %></p>
  <p><strong>Our Notes:</strong> <%= @movie.notes %></p>
  
  </div><!--col-sm-9-->
</div><!--row-->





