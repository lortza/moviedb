<h1>Categories</h1>
<div class="pull-right">
  <%= link_to ' New Category', new_category_path, class: "fa fa-plus" %>
</div>

<table class= "table">
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.order("name").each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= link_to ' Movies', category, class: "fa fa-film" %></td>
        <td><%= link_to ' Edit', edit_category_path(category), class: "fa fa-pencil" %></td>
        <td><%= link_to ' Delete', category, method: :delete, data: { confirm: 'Are you sure you want to delete this category? This will NOT delete any movies assigned to this category, but it will leave them uncategorized.' }, class: "fa fa-trash-o" %></td>
      </tr>
    <% end %>
  </tbody>
</table>



